extends layout

block content
  main.category-create
    form.category-create(method="POST" action="")
      - let [name, description, icon_url] = category ? [category.name, category.description, category.icon_url] : ['', '', ''];
      h1 
        if isEdit
          | #{`Update: ${name}`}
        else 
          | Create a new product category
      label(for="name") Product category:
      input(name="name" value=name)
      label(for="description")  Description:
      input(name="description" value=description)
      label(for="icon_url")  Icon Image URL:
      input(name="icon_url" value=icon_url)
      button(type="submit") 
        if isEdit
          | Save Edit
        else
          | Create
    if isEdit
      form.category-delete(method='POST' action=`/catalog/category/${category._id}/delete`)
        button.danger(type='submit') Delete  
    if errors 
      br
      | Form errors:
      each error in errors
        li!= error.msg